<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vj.lets.domain.location.mapper.SiDoMapper">

    <insert id="create" parameterType="String">
        INSERT INTO SI_DO(ID, NAME)
        VALUES (SI_DO_ID_SEQ.NEXTVAL, #{siDoName})
    </insert>

    <select id="findBySiDo" resultType="SiDo">
        SELECT ID, NAME
        FROM SI_DO
        WHERE NAME = #{siDoName}
    </select>

</mapper>